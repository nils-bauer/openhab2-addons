<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="gpio"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
        xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">


    <thing-type id="gpio-switch">
        <label>GPIO Switch Thing</label>
        <description>Switch GPIO Pin</description>

        <channels>
            <channel id="gpio-switch" typeId="gpio-switch"/>
        </channels>
        <config-description>
            <parameter name="pin" type="integer" required="true">
                <label>GPIO Pin</label>
                <description>GPIO pin to use as switch
                </description>
            </parameter>
        </config-description>
    </thing-type>

    <thing-type id="gpio-contact">
        <label>GPIO Contact Thing</label>
        <description>GPIO PIN Contact</description>

        <channels>
            <channel id="gpio-contact" typeId="gpio-contact"/>
        </channels>
        <config-description>
            <parameter name="pin" type="integer" required="true">
                <label>GPIO Pin</label>
                <description>GPIO pin to use as contact
                </description>
            </parameter>
        </config-description>
    </thing-type>
    
    <channel-type id="gpio-switch">
        <item-type>Switch</item-type>
        <label>GPIO switch</label>
        <description>GPIO output switch</description>
    </channel-type>
    <channel-type id="gpio-contact">
        <item-type>Contact</item-type>
        <label>GPIO contact</label>
        <description>GPIO input contact</description>
        <state readOnly="true" />
    </channel-type>

</thing:thing-descriptions>
